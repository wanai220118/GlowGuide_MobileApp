<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_arrow"
        android:layout_marginBottom="8dp"
        android:layout_gravity="start"
        android:padding="0dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progress="40"
        android:max="100"
        android:progressDrawable="@drawable/progress_drawable" />

    <!-- Question Number -->
    <TextView
        android:id="@+id/questionNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 2/5"
        android:textSize="20sp"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Question Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How does your skin typically look by midday?"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Answers inside CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="4dp"
        android:layout_marginBottom="24dp">

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/answerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Even-toned with little to no shine"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/answerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dull, flaky, or patchy"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/answerC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Very shiny, especially on the entire face"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/answerD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shiny in the T-zone, dry/normal elsewhere"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/answerE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red or blotchy with visible irritation"
                android:paddingVertical="8dp" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center" />
</LinearLayout>
