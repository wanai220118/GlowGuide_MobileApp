<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/appbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/profileHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Section Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/subhead">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <!-- Profile Image with Edit Icon -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/user"
                    android:contentDescription="Profile Image"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:id="@+id/editPhotoIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/editprofile"
                    app:tint="@color/black"
                    android:background="@drawable/circle_background"
                    android:layout_alignTop="@id/profileImage"
                    android:layout_alignEnd="@id/profileImage"
                    android:padding="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Text Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/profileImage"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username@gmail.com"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone: 012-3456789"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvLastLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last login: Today"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- (Remaining content unchanged - Consultation count card, menu buttons, logout) -->


        <!-- Consultation Count Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/subhead">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTotalConsultations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Consultations: 1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnConsultation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consultations" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Menu Items -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/editprofile"
            android:drawableTint="@color/subhead"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="Edit Profile" />

        <Button
            android:id="@+id/btnRoutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Routine"
            android:drawableLeft="@drawable/clock"
            android:drawableTint="@color/subhead"
            android:padding="12dp"
            android:drawablePadding="6dp"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/btnSkinCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skin Condition"
            android:drawableLeft="@drawable/sc"
            android:drawableTint="@color/subhead"
            android:padding="12dp"
            android:drawablePadding="6dp"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About GlowGuide"
            android:drawableLeft="@drawable/about"
            android:drawableTint="@color/subhead"
            android:padding="12dp"
            android:drawablePadding="6dp"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/btnFAQs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQs"
            android:drawableLeft="@drawable/faq"
            android:drawableTint="@color/subhead"
            android:padding="12dp"
            android:drawablePadding="6dp"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/btnPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:drawableLeft="@drawable/privacypolicy"
            android:drawableTint="@color/subhead"
            android:padding="12dp"
            android:drawablePadding="6dp"
            android:layout_marginTop="2dp" />

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />
    </LinearLayout>
</ScrollView>
