<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_arrow"
        android:layout_marginBottom="8dp"
        android:layout_gravity="start"
        android:padding="0dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progress="100"
        android:max="100"
        android:progressDrawable="@drawable/progress_drawable" />

    <!-- Question Number -->
    <TextView
        android:id="@+id/questionNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 5/5"
        android:textSize="20sp"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Question Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which statement best describes your overall skin concerns?"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Answer Options in CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="4dp"
        android:layout_marginBottom="24dp">

        <RadioGroup
            android:id="@+id/radioGroup5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/answerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I don’t have major skin issues – my skin feels balanced"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/answerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I struggle with dryness, flakiness, or tightness"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/answerC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I deal with frequent oiliness or acne"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/answerD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I’m concerned about both oiliness and dryness in different areas"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/answerE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I often experience redness, irritation, or allergic reactions"
                android:paddingVertical="8dp" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

    <!-- Submit Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Result"
        android:layout_gravity="center" />
</LinearLayout>
