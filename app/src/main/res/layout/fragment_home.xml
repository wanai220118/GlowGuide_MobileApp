<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/appbg"
    android:padding="16dp"
    tools:context=".fragments.HomeFragment">

    <!-- Top Bar with App Title & Bell -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:background="@color/description">

        <ImageView
            android:layout_width="273dp"
            android:layout_height="78dp"
            android:background="@drawable/appheader"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/notificationBell"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:contentDescription="Notification"
            android:focusable="true"
            android:src="@drawable/bell"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="Welcome back! Ready to take better care of your skin today?"
        android:textAlignment="center"
        android:textColor="@color/colorHeadingText"
        android:textSize="18sp" />

    <!-- Image Slider -->
    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginBottom="12dp"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_period="1000"
        android:background="@drawable/slider4"/>

    <!-- Quiz Prompt + Button Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/quiz_prompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Not sure about your skin type?\nTake our quick quiz to find out â€” just tap the button!"
            android:textColor="@color/colorHeadingText"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTakeQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Analyze My Skin"
            android:textColor="@color/colorBackground"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Card for Skincare Tips (Example Content) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/names"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/tips_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Skincare Video Tips"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Video 1 -->
                    <ImageView
                        android:id="@+id/video1"
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Video 1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb1" />

                    <!-- Video 2 -->
                    <ImageView
                        android:id="@+id/video2"
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Video 2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb2" />

                    <!-- Video 3 -->
                    <ImageView
                        android:id="@+id/video3"
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Video 3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb3" />

                    <!-- Video 4 -->
                    <ImageView
                        android:id="@+id/video4"
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Video 4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb4" />

                    <ImageView
                        android:id="@+id/video5"
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        android:contentDescription="Video 5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb5" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
