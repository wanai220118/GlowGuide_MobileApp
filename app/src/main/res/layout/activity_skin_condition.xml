<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/subhead">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/nav_bar_translucent"
        app:title="Skin Condition"
        android:titleTextColor="@color/colorPrimary"
        app:navigationIcon="@drawable/back_arrow" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp">

            <!-- Card: Skin Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSkinType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Skin Type: None"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recommended Treatments:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvTreatments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textColor="@color/black"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recommended Products:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Analyze Again Button -->
            <Button
                android:id="@+id/btnRetakeQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyze Again"
                android:textAllCaps="false"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>