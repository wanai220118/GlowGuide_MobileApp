<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.glowguide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_bg"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlowGuide"
        android:networkSecurityConfig="@xml/network_security_config">

        <receiver android:name=".ReminderReceiver" />

        <!-- LauncherActivity (entry point) -->
        <activity android:name=".activities.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.OnBoardingActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity android:name=".activities.RegistrationActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.ProductDetailActivity"/>
        <activity android:name=".activities.NotificationActivity" />

        <!-- Quiz Activities -->
        <activity android:name=".activities.QuizActivity" />
        <activity android:name=".activities.Question2Activity" />
        <activity android:name=".activities.Question3Activity" />
        <activity android:name=".activities.Question4Activity" />
        <activity android:name=".activities.Question5Activity" />

        <!-- Activity to Display the Skin Type Result -->
        <activity android:name=".activities.SkinTypeResultActivity" />

        <activity android:name=".activities.AddReminderActivity" />

        <activity android:name=".activities.AddConsultationActivity"/>
        <activity android:name=".activities.ForgotPasswordActivity"/>

        <activity android:name=".activities.EditProfileActivity" />
        <activity android:name=".activities.RoutineActivity" />
        <activity android:name=".activities.SkinConditionActivity" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.FaqsActivity" />
        <activity android:name=".activities.PrivacyPolicyActivity" />
        <activity android:name=".activities.OrderDetailActivity" />

        <receiver android:name=".ReminderReceiver" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>
